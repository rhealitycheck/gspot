<%= form_for @user do |f| %>
	<% @user.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
	<% end %>

	<%= f.label 'First Name' %>
	<%= f.text_field :firstname %> 
	<br>

	<%= f.label 'Last Name' %>
	<%= f.text_field :lastname %> 
	<br>

	<%= f.label 'Email Address' %>
	<%= f.text_field :email %> 
	<br>

	<%= f.label :password %>
	<%= f.password_field :password %> 
	<br>
	<%= f.label :password_confirmation %>
	<%= f.password_field :password_confirmation %> 
	<br>

	<%= f.submit %>

<% end %>